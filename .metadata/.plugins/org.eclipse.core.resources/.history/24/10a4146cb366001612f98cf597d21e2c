 * 案例如此，还有其他不懂的细节。请自行查看bootstrapt-table.js的使用
 */


$(document).ready(function() {
	$('#example').bootstrapTable({
	    columns: [{
	        field: 'id',
	        title: 'Item ID'
	    }, {
	        field: 'name',
	        title: 'Item Name'
	    }, {
	        field: 'price',
	        title: 'Item Price'
	    }],
	    data: [{
	        id: 1,
	        name: 'Item 1',
	        price: '$1'
	    }, {
	        id: 2,
	        name: 'Item 2',
	        price: '$2'
	    }]
	});
} );

$(document).ready(function ajaxtable(){
	 $.ajax({
         type: "POST",
         url: "/scfcloud/role/list",
         contentType: "application/json",
         data: JSON.stringify({ 
        	 "roleName": "管理员",  //模糊匹配，可选参数
        	  "roleType": "1",  //可选参数
        	  "pageNo": 0,
        	  "pageSize": 10
}),
         dataType: "json",
         success: function(data){
        	 console.log(data);
        	 var dataObj = data.dataList;
        	 addtabledata(dataObj);
                  }
     });
});